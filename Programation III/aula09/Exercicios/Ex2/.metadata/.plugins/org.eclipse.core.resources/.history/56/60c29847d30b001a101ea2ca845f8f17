package aula09Ex2;

public class GeladoSimples implements Gelado{
	private String sabor;
	
	public GeladoSimples(String sabor) {
		this.sabor = sabor;
	}
	
	@Override
	public void base(int numBolas) {
		System.out.println(numBolas+" bolas de gelado de "+this.sabor);
	}
	
	public String getSabor() {
		return this.sabor;
	}
}
