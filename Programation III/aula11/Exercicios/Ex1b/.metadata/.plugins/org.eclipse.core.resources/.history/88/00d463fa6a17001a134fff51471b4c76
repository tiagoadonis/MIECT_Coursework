package aula11Ex1b;
import java.util.*;
import java.io.*;

public class ReadFile {

static Scanner sc = new Scanner(System.in);
	
	public static void main(String[] args) throws IOException {
		HashSet<String> words = new HashSet<>();
		int totWords = 0, differentWords = 0; 
		//int repeatedWords = 0;
		
		System.out.print("Introduza o nome do ficheiro: ");
		String fileName = sc.nextLine();
		
		File f = new File(fileName);
		Scanner scf = new Scanner(f);
		
		while(scf.hasNextLine()) {
			String line = scf.nextLine();
			String[] palavras = line.split(" ");
			for (int i = 0; i < palavras.length; i++) {
				if (words.contains(palavras[i])) {
					totWords++;
					//repeatedWords++;
				}
				else {
					words.add(palavras[i]);
					totWords++;
					differentWords++;
				}
			}
		}
		scf.close();
	
		//int different = differentWords - repeatedWords;
		System.out.println("Número Total de Palavras: "+totWords);
		System.out.println("Número de Diferentes Palavras: "+differentWords);
	}

}
