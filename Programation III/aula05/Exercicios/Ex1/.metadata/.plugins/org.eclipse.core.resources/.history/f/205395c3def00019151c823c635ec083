package aula05Ex1;

public class UtilCompare {
		
	public Figura findMax(Figura[] listaFig) {
		int maxIndex = 0, i =0; 
		double maxArea = 0;
		for (Figura f : listaFig) {
			if (f.area() > maxArea) {
				maxArea = f.area();
			}
			i++;
		}
		return listaFig[maxIndex];
	}
	
	public void  sortArray(Figura[] listaFig) {
		
	}
}
