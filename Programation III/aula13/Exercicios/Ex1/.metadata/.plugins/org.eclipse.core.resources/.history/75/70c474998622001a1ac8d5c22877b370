package aula13Ex1;
import java.util.*;

public class Pais{
	private String nome;
	private int populacao;
	private Localidade capital;
	private ArrayList<Regiao> regioes;
	
	public Pais (String name, Localidade cap) {
		this.nome = name;
		this.populacao = cap.getPopulacao();
		this.capital = cap;
		this.regioes = new ArrayList<>();
	}
	
	public Pais (String name) {
		this.nome = name;
		this.populacao 0 0;
		// quando não é passada capital para o construtor -> imprimir *Indefinida* no toString
		this.regioes = new ArrayList<>();
	}
	
	public void addRegiao(Regiao r) { 
		if (!this.regioes.contains(r)) {
			this.regioes.add(r);
		}
	}
	
	@Override
	public String toString() {
		String str = "Pais: "+super.getNome()+", População: "+super.getPopulacao()+" (Capital: Cidade ";
		String cap = "";
		if (this.capital != null) {
			cap = cap + this.capital.getNome();
		}
		else {
			cap = cap + "*Indefinida*";
		}
		return str + cap+", populacao "+this.capital.getPopulacao()+")";
	}
}
