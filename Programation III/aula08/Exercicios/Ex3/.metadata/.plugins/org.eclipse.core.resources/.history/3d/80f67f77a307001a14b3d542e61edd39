package aula08Ex3;

import java.awt.BorderLayout;
import java.awt.Color;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;

public class GameWindow {
	public GameWindow() {
		createGameWindow();
	}
	
	public void createGameWindow() {
		JFrame frame = new JFrame("Quem quer ser Milionário");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(800,500);
		
		JPanel content = (JPanel) frame.getContentPane();
		content.setBackground(Color.WHITE);
		content.setLayout(new BorderLayout());
		
		JTextArea textArea = new JTextArea("Zona das perguntas");
		textArea.setEditable(false);
		
		JButton button1 = new JButton("Ajuda Público");
		JButton button2 = new JButton("Telefone");
		JButton button3 = new JButton("50-50");
		
		content.add(textArea,BorderLayout.LINE_END);
		content.add(button1,BorderLayout.LINE_END);
		content.add(button2,BorderLayout.LINE_END);
		content.add(button3,BorderLayout.LINE_END);
		
		frame.setContentPane(content);
		frame.setVisible(true);
	}
}
