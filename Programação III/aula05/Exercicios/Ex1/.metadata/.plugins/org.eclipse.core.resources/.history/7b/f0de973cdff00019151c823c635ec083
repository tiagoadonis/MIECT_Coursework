package aula05Ex1;

public class UtilCompare {
		
	public static Figura findMax(Figura[] listaFig) {
		int maxIndex = 0, i = 0; 
		double maxArea = 0;
		for (Figura f : listaFig) {
			if (f.area() > maxArea) {
				maxArea = f.area();
				maxIndex = i;
			}
			i++;
		}
		return listaFig[maxIndex];
	}
	
	public static void sortArray(Figura[] listaFig) {
		for (int i = 0, listaFig.length, )
	}
}
