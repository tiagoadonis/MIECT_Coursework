package aula03Ex2;

public class Quadrado {
	private double lado;
	private double area;
	private double perimetro;
	
	public Quadrado (double l){
		lado = l;
		area = l * l;
		perimetro = 4 * l;
	}
	
	public double lado(){
		return lado;
	}
	public double area(){
		return area;
	}
	public double perimetro(){
		return perimetro;
	}
	
}