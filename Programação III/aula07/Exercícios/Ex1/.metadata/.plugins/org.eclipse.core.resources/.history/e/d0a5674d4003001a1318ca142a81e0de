package aula07Ex1;

public class Companhia {
	private String sigla;
	private String name;
	
	public Companhia(String sigla, String name) {
		this.sigla = sigla;
		this.name = name;
	}
	
	public String getSigla() {
		return this.sigla;
	}
	
	public String getName() {
		return this.name;
	}
	
